<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.evenzt.CreateEvent2">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_create_event2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="@string/what_do_you_want_to_do"
                android:textColor="#000"
                android:textSize="16sp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/party_title"
                android:padding="20dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textAllCaps="true"
                android:background="#efefef"
                android:textColor="#484848"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:background="@null"
                android:textSize="16sp"
                android:typeface="sans"
                android:textColorHint="#ccc"
                android:outlineProvider="bounds"
                android:hint="@string/event_title"
                android:textColor="#444444"
                android:inputType="textNoSuggestions"
                android:padding="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#efefef"
                    >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/start_date"
                    android:text="@string/start"
                    android:gravity="center"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:layout_centerInParent="true"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:drawableStart="@drawable/cal"
                    android:drawingCacheQuality="high"
                    android:drawablePadding="10dp"
                    android:textAllCaps="true"

                    />
                </RelativeLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#ccc"
                    />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#efefef"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/end_date"
                        android:text="@string/end_date"
                        android:gravity="center"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:layout_centerInParent="true"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:drawableStart="@drawable/cal"
                        android:drawingCacheQuality="high"
                        android:drawablePadding="10dp"
                        android:textAllCaps="true"

                        />
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#efefef"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/clock"
                android:drawablePadding="10dp"
                android:drawingCacheQuality="high"
                android:id="@+id/event_time"
                android:text="@string/start_time"
                android:layout_centerInParent="true"
                android:textAllCaps="true"
                android:gravity="center"
                android:padding="15dp"

                />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#efefef"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/clock"
                    android:drawablePadding="10dp"
                    android:drawingCacheQuality="high"
                    android:id="@+id/event_end_time"
                    android:text="@string/end_time"
                    android:layout_centerInParent="true"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:padding="15dp"

                    />


            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/event_details"
                android:textColor="#444"
                android:background="@null"
                android:textSize="14sp"
                android:textColorHint="#ccc"
                android:maxLines="1"
                android:inputType="textNoSuggestions|textMultiLine"
                android:padding="15dp"
                android:id="@+id/about_event" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/enter_keywords_with_commas"
                android:maxLength="30"
                android:textColor="#444"
                android:background="@null"
                android:textSize="14sp"
                android:textColorHint="#ccc"
                android:maxLines="1"
                android:inputType="textNoSuggestions|textMultiLine"
                android:padding="15dp"
                android:id="@+id/keywords" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                />


            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions|textMultiLine"
                android:id="@+id/country" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/state"
                android:maxLength="30"
                android:textColor="#444"
                android:background="@null"
                android:textSize="14sp"
                android:textColorHint="#ccc"
                android:maxLines="1"
                android:inputType="textNoSuggestions|textMultiLine"
                android:padding="15dp"
                android:id="@+id/state" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/city"
                android:maxLength="30"
                android:textColor="#444"
                android:background="@null"
                android:textSize="14sp"
                android:textColorHint="#ccc"
                android:maxLines="1"
                android:inputType="textNoSuggestions|textMultiLine"
                android:padding="15dp"
                android:id="@+id/city" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/address"
                android:inputType="textNoSuggestions|textMultiLine"
                android:padding="15dp"
                android:background="@null"
                android:textSize="14sp"
                android:textColor="#444"
                android:textColorHint="#ccc"
                android:id="@+id/venue" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >




            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#efefef"
                >



                <fragment
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/map2"
                    app:cameraZoom="13"
                    app:mapType="normal"
                    app:uiCompass="false"
                    app:uiRotateGestures="false"
                    app:uiScrollGestures="false"
                    app:uiTiltGestures="false"
                    app:uiZoomControls="false"
                    app:uiZoomGestures="false"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:text="@string/add_location"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:background="@drawable/dark_shade"
                    android:id="@+id/pick_location"
                    android:padding="10dp"
                    android:textAllCaps="true"
                    android:drawablePadding="10dp"
                    />


            </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:id="@+id/preview_image"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/partydreamcolorpart"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#ffffff"
                        android:id="@+id/pick_image"
                        android:background="@drawable/dark_shade"
                        android:padding="10dp"
                        android:gravity="center"
                        android:text="@string/edit"
                        />


                </RelativeLayout>


            </LinearLayout>










            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/footer"
                android:weightSum="2"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/public1"
                    android:textAllCaps="true"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="#ffffff"
                    android:id="@+id/make_piblic"
                    android:gravity="center"
                    android:background="#5acfc4"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/private1"
                    android:textAllCaps="true"
                    android:id="@+id/make_private"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#efefef"
                    />


            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                />


        </LinearLayout>





    </android.support.v4.widget.NestedScrollView>

    </LinearLayout>



</RelativeLayout>



    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bottom_sheet"
        android:clipToPadding="true"
        android:background="#fff"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:id="@+id/head"
                android:gravity="center"
                android:text="@string/invite_friends_to_join"
                android:textAllCaps="true"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                />


            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/choose_friends"
                />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="10dp"
        android:src="@drawable/ok"
        android:id="@+id/create"
        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/progress"
        android:visibility="gone"
        />

</android.support.design.widget.CoordinatorLayout>